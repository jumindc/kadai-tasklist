<% if logged_in? %>
  <div class="row">
    <div class="col-xs-12">
      
      <% if @tasks.any? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>タスク</th>
              <th>ステータス</th>
              <th>登録日</th>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>
              <% user = task.user %>
              <tr>
                <td><%= link_to task.content, task %></td>
                <td><%= task.status %></td>
                <td><%= task.created_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @tasks %>
      <% end %>

    </div>
  </div>

  <%= link_to '新規タスク登録', new_task_path, class: "btn btn-primary" %>

<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the TaskList</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

<% end %>
